.fb-clear
  clear: both

.fb-main
  max-width: 1000px
  margin: 0 auto

.fb-left
  width: 320px
  float: left
  background-color: #eee
  padding: 20px

.fb-right
  margin-left: 400px

.fb-tabs
  list-style: none
  margin: 0
  padding: 0

  li
    display: inline-block
    margin: 5px 10px 20px 0

.fb-tab-content
  .fb-tab-pane
    display: none

    &.active
      display: block

.fb-add-field-types
  a
    display: inline-block
    width: 33%
    background-color: #ccc
    margin-bottom: 6px
    padding: 4px

.fb-response-fields
  padding-bottom: 450px

  a.sortable-placeholder
    display: block
    border: 1px dashed #ddd
    min-height: 80px
    height: 80px
    width: 100%

  .response-field-wrapper
    cursor: pointer
    position: relative
    margin-bottom: 20px

    &:hover, &.editing
      .actions-wrapper
        display: block

    &:hover
      .subtemplate-wrapper
        border-color: #ddd

    &.editing
      background-color: #dfefff

      .subtemplate-wrapper
        border-color: #c2d7ef
        border-style: solid

    /* remove/duplicate buttons */
    .actions-wrapper
      display: none
      position: absolute
      bottom: -7px
      right: 5px
      z-index: 3

      a
        display: inline-block
        background-color: #ccc
        padding: 2px 8px

  .subtemplate-wrapper
    border: 1px dashed transparent
    margin-bottom: 10px
    padding: 10px
    position: relative

    .cover
      position: absolute
      height: 100%
      width: 100%
      z-index: 2

#edit-response-field-wrapper
  .fb-field-label
    font-weight: bold
    font-size: 16px

  .fb-edit-section-header
    font-weight: bold
    border-bottom: 1px solid #ccc
    margin-top: 15px

.response-field-draggable-helper
  border: 1px dashed #ddd
  background: #eee
